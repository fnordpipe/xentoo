description="luksd unlock luks container"

start()
{
  start-stop-daemon --start \
    --make-pidfile \
    --pidfile /run/luksd.pid \
    --background \
    --user ${LUKSD_USER}:${LUKSD_GROUP} \
    --exec /sbin/luksd ${LUKSD_BLKDEV} ${LUKSD_NAME} ${LUKSD_USER} ${LUKSD_GROUP}

  return 0
}

stop()
{
  start-stop-daemon --stop \
    --pidfile /run/luksd.pid \
    --exec /sbin/luksd

  return 0
}
